<h1>To Do List</h1>

<form action="/" method="post" id="addNewItem">
	<label for="item">Add new item: </label><input type="text" name="item" required="true">
	<input type="submit">
</form>

{{#if todos}}
<ul class="todo-list">
	

{{#each todos}}
	<li class="todo-item" data-id="{{_id}}"><span>{{text}}</span>
	<input type="text" name="todo[]" value="{{text}}" placeholder="{{text}}"></li>
{{/each}}
</ul>
{{/if}}